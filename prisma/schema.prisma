// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model User {
    id            String       @id @default(cuid())
    username      String       @unique
    password      String
    admin         Boolean      @default(false)
    createdAt     DateTime     @default(now())
    DestinationId String?
    Destination   Destination? @relation(fields: [DestinationId], references: [id])
}

model Destination {
    id            String        @id
    description   String
    User          User[]
    CentroCosto   CentroCosto[]
    RazonSocial   RazonSocial   @relation(fields: [razonSocialId], references: [id])
    razonSocialId String
    Account       Account[]
}

model CentroCosto {
    id             String      @id @default(cuid())
    name           String
    Destination    Destination @relation(fields: [DeestinationId], references: [id])
    DeestinationId String
}

model RazonSocial {
    id           String        @id @default(cuid())
    name         String
    Destinations Destination[]
}

model Account {
    id            String      @id @default(cuid())
    name          String
    CentroCosto   Destination @relation(fields: [CentroCostoId], references: [id])
    CentroCostoId String
}
